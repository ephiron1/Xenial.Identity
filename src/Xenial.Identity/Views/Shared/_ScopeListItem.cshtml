@model ScopeViewModel

<li class="xenial-form__list-item">
    <label for="scopes_@Model.Value" class="xenial-form__list-item__consent-label">
        <span class="xenial-form__list-item__consent-label__header">
            @if (Model.Emphasize)
            {
                <i class="fas fa-exclamation-circle"></i>
            }
            <strong>@Model.DisplayName</strong>
            @if (Model.Required)
            {
                <span><em>(required)</em></span>
            }
        </span>
        @if (Model.Description != null)
        {
            <span class="xenial-form__list-item__consent-label__description">
                @Model.Description
            </span>
        }
    </label>
    @if (Model.Required)
    {
        <input type="hidden"
                name="ScopesConsented"
                value="@Model.Value" />
    }
    <input class="toggle"
               type="checkbox"
               name="ScopesConsented"
               id="scopes_@Model.Value"
               value="@Model.Value"
               checked="@Model.Checked"
               disabled="@Model.Required" />
</li>
