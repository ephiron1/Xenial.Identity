@page
@model Xenial.Identity.Areas.Admin.Pages.RolesModel
@{
    Layout = "/Views/Shared/_LayoutWithoutSide.cshtml";
}

<div class="admin-roles-page">
    <h1>Roles</h1>

    @(Html.Grid(Model.Roles).Build(columns =>
    {
        columns.Add(model => $"<i class=\"fa fa-fingerprint\" data-copy=\"{model.Id}\" title=\"{model.Id}\"></i>").Encoded(false).Titled("Id").Css("user-image");
        columns.Add(model => $"<a href=\"Admin/Roles/View/{model.Id}\">{model.Name}</a>").Encoded(false).Titled("Name");

        columns.Add(model => $"<div class=\"actions-container\"><a href=\"/Admin/Roles/Delete/{model.Id}\" class=\"button\"><i class=\"fas fa-times\"></i></a><a class=\"button\" href=\"/Admin/Roles/Edit/{model.Id}\"><i class=\"fas fa-pen\"></i></a></div>")
            .Encoded(false)
            .Css("actions")
            .Titled("<div class=\"actions-container\"><a class=\"button\" href=\"/Admin/Roles/Add\"><i class=\"fas fa-plus\"></i></button></div>");
    })
    .Using(GridFilterMode.Header)
    .Empty("No data found")
    .Filterable(GridFilterCase.Lower)
    .Sortable()
    )
</div>
