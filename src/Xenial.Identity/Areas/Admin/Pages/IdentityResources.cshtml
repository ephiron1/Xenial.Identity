@page
@model Xenial.Identity.Areas.Admin.Pages.IdentityResourcesModel
@{
    Layout = "/Views/Shared/_LayoutWithoutSide.cshtml";
}

<div class="admin-identity-resources-page">
    <h1>Identity Resources</h1>

    @(Html.Grid(Model.IdentityResources).Build(columns =>
    {
        columns.Add(model => $"<i class=\"fa fa-fingerprint\" data-copy=\"{model.Id}\" title=\"{model.Id}\"></i>")
            .Filterable(false)
            .Sortable(false)
            .Encoded(false)
            .Titled("Id")
            .Css("user-image");

        columns.Add(model => $"<a href=\"/Admin/IdentityResources/Edit/{model.Id}\">{model.Name}</a>")
            .Named(nameof(IdentityResourcesModel.IdentityResourceOutputModel.Name))
            .Encoded(false)
            .Sortable(true)
            .Filterable(true)
            .Titled("Name");

        columns.Add(model => $"<div class=\"actions-container\"><a href=\"/Admin/IdentityResources/Delete/{model.Id}\" class=\"button\"><i class=\"fas fa-times\"></i></a><a class=\"button\" href=\"/Admin/IdentityResources/Edit/{model.Id}\"><i class=\"fas fa-pen\"></i></a></div>")
            .Encoded(false)
            .Css("actions")
            .Titled("<div class=\"actions-container\"><a class=\"button\" href=\"/Admin/IdentityResources/Add\"><i class=\"fas fa-plus\"></i></button></div>");
    })
    .Using(GridFilterMode.Header)
    .Empty("No data found")
    .Filterable(GridFilterCase.Lower)
    .Sortable()
    )
</div>
