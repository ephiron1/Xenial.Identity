@page "/Admin/Clients/Delete/{id:int}"

@model Xenial.Identity.Areas.Admin.Pages.Clients.DeleteClientModel
@{
    Layout = "/Views/Shared/_LayoutWithoutSide.cshtml";
    ViewData["Title"] = "Delete Client";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="admin-delete-clients-page">
    <div class="admin-delete-clients-page-tabs">
        <input type="radio" id="tab1" name="tab-control" checked>
        <ul class="admin-delete-clients-page-tabs__list">
            <li class="admin-delete-clients-page-tabs__list-item" title="@ViewData["Title"]">
                <label class="admin-delete-clients-page-tabs__list-item-label" for="tab1" role="button">
                    <i class="fas fa-desktop"></i> <span>@ViewData["Title"]</span>
                </label>
            </li>
        </ul>
        <div class="admin-delete-clients-page-tabs__slider"><div class="indicator"></div></div>
        <div class="admin-delete-clients-page-tabs__content">
            <form class="xenial-form" method="post">
                <ul class="xenial-form__list">
                    <li class="xenial-form__list-item">
                        <label asp-for="Input.ClientId"></label>
                        <input asp-for="Input.ClientId" disabled />
                    </li>
                    <li class="xenial-form__list-item">
                        <label asp-for="Input.ClientName"></label>
                        <input asp-for="Input.ClientName" disabled />
                    </li>
                    <li class="xenial-form__list-item">
                        <button type="submit" class="xenial-form__list-item-danger">@ViewData["Title"]</button>
                    </li>
                </ul>
            </form>
        </div>
    </div>
</div>
