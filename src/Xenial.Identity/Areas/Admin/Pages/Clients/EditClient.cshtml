@page "/Admin/Clients/Edit/{id:int}"

@model Xenial.Identity.Areas.Admin.Pages.Clients.EditClientModel
@{
    Layout = "/Views/Shared/_LayoutWithoutSide.cshtml";
    ViewData["Title"] = "Edit Client";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div asp-validation-summary="All" class="text-danger"></div>

<form class="xenial-form" method="post">
    <div class="admin-edit-clients-page">
        <div class="admin-edit-clients-page-tabs">
            <input type="radio" id="tab1" name="tab-control">
            <input type="radio" id="tab2" name="tab-control" checked>
            <input type="radio" id="tab3" name="tab-control">
            <input type="radio" id="tab4" name="tab-control">
            <input type="radio" id="tab5" name="tab-control">
            <input type="radio" id="tab6" name="tab-control">
            <input type="radio" id="tab7" name="tab-control">
            <ul class="admin-edit-clients-page-tabs__list">
                <li class="admin-edit-clients-page-tabs__list-item" title="General">
                    <label class="admin-edit-clients-page-tabs__list-item-label" for="tab1" role="button">
                        <i class="fas fa-desktop"></i> <span>General</span>
                    </label>
                </li>
                <li class="admin-edit-clients-page-tabs__list-item" title="Configuration">
                    <label class="admin-edit-clients-page-tabs__list-item-label" for="tab2" role="button">
                        <i class="fas fa-cog"></i> <span>Configuration</span>
                    </label>
                </li>
                <li class="admin-edit-clients-page-tabs__list-item" title="Secrets">
                    <label class="admin-edit-clients-page-tabs__list-item-label" for="tab3" role="button">
                        <i class="fas fa-key"></i> <span>Secrets</span>
                    </label>
                </li>
                <li class="admin-edit-clients-page-tabs__list-item" title="Token">
                    <label class="admin-edit-clients-page-tabs__list-item-label" for="tab4" role="button">
                        <i class="fas fa-user-tag"></i> <span>Token</span>
                    </label>
                </li>
                <li class="admin-edit-clients-page-tabs__list-item" title="Consent">
                    <label class="admin-edit-clients-page-tabs__list-item-label" for="tab5" role="button">
                        <i class="fas fa-question"></i> <span>Consent</span>
                    </label>
                </li>
                <li class="admin-edit-clients-page-tabs__list-item" title="Device">
                    <label class="admin-edit-clients-page-tabs__list-item-label" for="tab6" role="button">
                        <i class="fas fa-tv"></i> <span>Device</span>
                    </label>
                </li>
                <li class="admin-edit-clients-page-tabs__list-item" title="Properties">
                    <label class="admin-edit-clients-page-tabs__list-item-label" for="tab7" role="button">
                        <i class="fas fa-cogs"></i> <span>Properties</span>
                    </label>
                </li>
            </ul>
            <div class="admin-edit-clients-page-tabs__slider"><div class="indicator"></div></div>
            <div class="admin-edit-clients-page-tabs__content">
                <section>
                    <h2>General</h2>
                    <ul class="xenial-form__list">
                        <li class="xenial-form__list-item">
                            <label asp-for="Input.ClientId"></label>
                            <input asp-for="Input.ClientId" />
                            <span asp-validation-for="Input.ClientId" class="text-danger"></span>
                        </li>
                        <li class="xenial-form__list-item">
                            <label asp-for="Input.ClientName"></label>
                            <input asp-for="Input.ClientName" />
                            <span asp-validation-for="Input.ClientName" class="text-danger"></span>
                        </li>
                        <li class="xenial-form__list-item">
                            <label asp-for="Input.Description"></label>
                            <input asp-for="Input.Description" />
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </li>
                        <li class="xenial-form__list-item inline">
                            <div class="inline">
                                <label asp-for="Input.Enabled"></label>
                                <input asp-for="Input.Enabled" class="toggle" />
                                <span asp-validation-for="Input.Enabled" class="text-danger"></span>
                            </div>
                            <div class="inline">
                                <label asp-for="Input.EnableLocalLogin"></label>
                                <input asp-for="Input.EnableLocalLogin" class="toggle" />
                                <span asp-validation-for="Input.EnableLocalLogin" class="text-danger"></span>
                            </div>
                        </li>
                        <li class="xenial-form__list-item">
                            <button type="submit" class="xenial-form__list-item-submit">@ViewData["Title"]</button>
                        </li>
                    </ul>
                </section>
                <section>
                    <h2>Configuration</h2>
                    <ul class="xenial-form__list">
                        <li class="xenial-form__list-item">
                            <label asp-for="Input.ProtocolType"></label>
                            <input asp-for="Input.ProtocolType" />
                            <span asp-validation-for="Input.ProtocolType" class="text-danger"></span>
                        </li>
                        <li class="xenial-form__list-item inline">
                            <div class="inline">
                                <label asp-for="Input.RequireClientSecret"></label>
                                <input asp-for="Input.RequireClientSecret" class="toggle" />
                                <span asp-validation-for="Input.RequireClientSecret" class="text-danger"></span>
                            </div>
                            <div class="inline">
                                <label asp-for="Input.RequirePkce"></label>
                                <input asp-for="Input.RequirePkce" class="toggle" />
                                <span asp-validation-for="Input.RequirePkce" class="text-danger"></span>
                            </div>
                            <div class="inline">
                                <label asp-for="Input.AllowPlainTextPkce"></label>
                                <input asp-for="Input.AllowPlainTextPkce" class="toggle" />
                                <span asp-validation-for="Input.AllowPlainTextPkce" class="text-danger"></span>
                            </div>
                        </li>
                        <li class="xenial-form__list-item inline">
                            <div class="inline">
                                <label asp-for="Input.AllowOfflineAccess"></label>
                                <input asp-for="Input.AllowOfflineAccess" class="toggle" />
                                <span asp-validation-for="Input.AllowOfflineAccess" class="text-danger"></span>
                            </div>
                            <div class="inline">
                                <label asp-for="Input.AllowAccessTokensViaBrowser"></label>
                                <input asp-for="Input.AllowAccessTokensViaBrowser" class="toggle" />
                                <span asp-validation-for="Input.AllowAccessTokensViaBrowser" class="text-danger"></span>
                            </div>
                            <div class="inline"></div>
                        </li>
                        <li class="xenial-form__list-item">
                            <label asp-for="Input.AllowedGrantTypes"></label>
                            <input asp-for="Input.AllowedGrantTypes" data-tags="@Model.AllowedGrantTypes" />
                            <span asp-validation-for="Input.AllowedGrantTypes" class="text-danger"></span>
                        </li>
                        <li class="xenial-form__list-item">
                            <label asp-for="Input.AllowedScopes"></label>
                            <input asp-for="Input.AllowedScopes" data-tags="@Model.AllowedScopes" />
                            <span asp-validation-for="Input.AllowedScopes" class="text-danger"></span>
                        </li>
                        <li class="xenial-form__list-item">
                            <label asp-for="Input.RedirectUris"></label>
                            <input asp-for="Input.RedirectUris" data-tags="" />
                            <span asp-validation-for="Input.RedirectUris" class="text-danger"></span>
                        </li>
                        <li class="xenial-form__list-item">
                            <label asp-for="Input.AllowedCorsOrigins"></label>
                            <input asp-for="Input.AllowedCorsOrigins" data-tags="" />
                            <span asp-validation-for="Input.AllowedCorsOrigins" class="text-danger"></span>
                        </li>
                        <li class="xenial-form__list-item">
                            <button type="submit" class="xenial-form__list-item-submit">@ViewData["Title"]</button>
                        </li>
                    </ul>
                </section>
                <section>
                    <h2>Secrets</h2>
                </section>
                <section>
                    <h2>Tokens</h2>
                    <ul class="xenial-form__list">
                        <li class="xenial-form__list-item inline">
                            <div class="inline">
                                <label asp-for="Input.IdentityTokenLifetime"></label>
                                <input asp-for="Input.IdentityTokenLifetime" />
                                <span asp-validation-for="Input.IdentityTokenLifetime" class="text-danger"></span>
                            </div>
                            <div class="inline">
                                <label asp-for="Input.AccessTokenLifetime"></label>
                                <input asp-for="Input.AccessTokenLifetime" />
                                <span asp-validation-for="Input.AccessTokenLifetime" class="text-danger"></span>
                            </div>
                        </li>
                        <li class="xenial-form__list-item inline">
                            <div class="inline">
                                <label asp-for="Input.AccessTokenType"></label>
                                <select asp-for="Input.AccessTokenType" asp-items="Model.AccessTokenTypes"></select>
                                <span asp-validation-for="Input.AccessTokenType" class="text-danger"></span>
                            </div>
                            <div class="inline">
                                <label asp-for="Input.AuthorizationCodeLifetime"></label>
                                <input asp-for="Input.AuthorizationCodeLifetime" />
                                <span asp-validation-for="Input.AuthorizationCodeLifetime" class="text-danger"></span>
                            </div>
                        </li>
                        <li class="xenial-form__list-item inline">
                            <div class="inline">
                                <label asp-for="Input.AbsoluteRefreshTokenLifetime"></label>
                                <input asp-for="Input.AbsoluteRefreshTokenLifetime" />
                                <span asp-validation-for="Input.AbsoluteRefreshTokenLifetime" class="text-danger"></span>
                            </div>
                            <div class="inline">
                                <label asp-for="Input.SlidingRefreshTokenLifetime"></label>
                                <input asp-for="Input.SlidingRefreshTokenLifetime" />
                                <span asp-validation-for="Input.SlidingRefreshTokenLifetime" class="text-danger"></span>
                            </div>
                        </li>
                        <li class="xenial-form__list-item inline">
                            <div class="inline">
                                <label asp-for="Input.RefreshTokenUsage"></label>
                                <select asp-for="Input.RefreshTokenUsage" asp-items="Model.RefreshTokenUsages"></select>
                                <span asp-validation-for="Input.RefreshTokenUsage" class="text-danger"></span>
                            </div>
                            <div class="inline">
                                <label asp-for="Input.RefreshTokenExpiration"></label>
                                <select asp-for="Input.RefreshTokenExpiration" asp-items="Model.RefreshTokenExpirations"></select>
                                <span asp-validation-for="Input.RefreshTokenExpiration" class="text-danger"></span>
                            </div>
                        </li>
                        <li class="xenial-form__list-item inline">
                            <div class="inline">
                                <label asp-for="Input.UpdateAccessTokenClaimsOnRefresh"></label>
                                <input asp-for="Input.UpdateAccessTokenClaimsOnRefresh" class="toggle" />
                                <span asp-validation-for="Input.UpdateAccessTokenClaimsOnRefresh" class="text-danger"></span>
                            </div>
                            <div class="inline">
                                <label asp-for="Input.IncludeJwtId"></label>
                                <input asp-for="Input.IncludeJwtId" class="toggle" />
                                <span asp-validation-for="Input.IncludeJwtId" class="text-danger"></span>
                            </div>
                        </li>
                        <li class="xenial-form__list-item inline">
                            <div class="inline">
                                <label asp-for="Input.AlwaysSendClientClaims"></label>
                                <input asp-for="Input.AlwaysSendClientClaims" class="toggle" />
                                <span asp-validation-for="Input.AlwaysSendClientClaims" class="text-danger"></span>
                            </div>
                            <div class="inline">
                                <label asp-for="Input.AlwaysIncludeUserClaimsInIdToken"></label>
                                <input asp-for="Input.AlwaysIncludeUserClaimsInIdToken" class="toggle" />
                                <span asp-validation-for="Input.AlwaysIncludeUserClaimsInIdToken" class="text-danger"></span>
                            </div>
                        </li>
                        <li class="xenial-form__list-item inline">
                            <div class="inline">
                                <label asp-for="Input.ClientClaimsPrefix"></label>
                                <input asp-for="Input.ClientClaimsPrefix" />
                                <span asp-validation-for="Input.ClientClaimsPrefix" class="text-danger"></span>
                            </div>
                            <div class="inline">
                                <label asp-for="Input.PairWiseSubjectSalt"></label>
                                <input asp-for="Input.PairWiseSubjectSalt" />
                                <span asp-validation-for="Input.PairWiseSubjectSalt" class="text-danger"></span>
                            </div>
                        </li>
                        <li class="xenial-form__list-item">
                            <button type="submit" class="xenial-form__list-item-submit">@ViewData["Title"]</button>
                        </li>
                    </ul>
                </section>
                <section>
                    <h2>Consent</h2>
                    <ul class="xenial-form__list">
                        <li class="xenial-form__list-item inline">
                            <div class="inline">
                                <label asp-for="Input.RequireConsent"></label>
                                <input asp-for="Input.RequireConsent" class="toggle" />
                                <span asp-validation-for="Input.RequireConsent" class="text-danger"></span>
                            </div>
                            <div class="inline">
                                <label asp-for="Input.AllowRememberConsent"></label>
                                <input asp-for="Input.AllowRememberConsent" class="toggle" />
                                <span asp-validation-for="Input.AllowRememberConsent" class="text-danger"></span>
                            </div>
                        </li>
                        <li class="xenial-form__list-item">
                            <label asp-for="Input.ClientUri"></label>
                            <input asp-for="Input.ClientUri" />
                            <span asp-validation-for="Input.ClientUri" class="text-danger"></span>
                        </li>
                        <li class="xenial-form__list-item">
                            <label asp-for="Input.LogoUri"></label>
                            <input asp-for="Input.LogoUri" />
                            <span asp-validation-for="Input.LogoUri" class="text-danger"></span>
                        </li>
                        <li class="xenial-form__list-item">
                            <button type="submit" class="xenial-form__list-item-submit">@ViewData["Title"]</button>
                        </li>
                    </ul>
                </section>
                <section>
                    <h2>Device</h2>
                    <ul class="xenial-form__list">
                        <li class="xenial-form__list-item">
                            <label asp-for="Input.UserCodeType"></label>
                            <input asp-for="Input.UserCodeType" />
                            <span asp-validation-for="Input.UserCodeType" class="text-danger"></span>
                        </li>
                        <li class="xenial-form__list-item">
                            <label asp-for="Input.DeviceCodeLifetime"></label>
                            <input asp-for="Input.DeviceCodeLifetime" />
                            <span asp-validation-for="Input.DeviceCodeLifetime" class="text-danger"></span>
                        </li>
                        <li class="xenial-form__list-item">
                            <button type="submit" class="xenial-form__list-item-submit">@ViewData["Title"]</button>
                        </li>
                    </ul>
                </section>
                <section>
                    <h2>Properties</h2>
                    @(Html.Grid(Model.Properties).Build(columns =>
                    {
                        columns.Add(model => $"<i class=\"fa fa-fingerprint\" data-copy=\"{model.Id}\" title=\"{model.Id}\"></i>")
                            .Named(nameof(UsersModel.UserOutputModel.Id))
                            .Encoded(false)
                            .Titled("Id")
                            .Css("user-image");

                        columns.Add(model => model.Key).Titled("Key");
                        columns.Add(model => model.Value).Titled("Value");

                        columns.Add(model => $"<div class=\"actions-container\"><a href=\"/Admin/Clients/{Model.Id}/Properties/{model.Id}/Delete\" class=\"button\"><i class=\"fas fa-times\"></i></a><a class=\"button\" href=\"/Admin/Clients/{Model.Id}/Properties/{model.Id}/Edit\"><i class=\"fas fa-pen\"></i></a></div>")
                            .Encoded(false)
                            .Css("actions")
                            .Titled($"<div class=\"actions-container\"><a class=\"button\" href=\"/Admin/Clients/{Model.Id}/Properties/Add\"><i class=\"fas fa-plus\"></i></button></div>");
                    })
                    .Empty("No data found")
                    )
                </section>
            </div>
        </div>
    </div>
</form>
