@page
@model ShowRecoveryCodesModel
@{
    ViewData["ASideClass"] = "show-aside";
    ViewData["Title"] = "Recovery codes";
    ViewData["ActivePage"] = "TwoFactorAuthentication";
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="recovery-codes-page">
    <div class="recovery-codes-page-tabs">
        <input type="radio" id="tab1" name="tab-control" checked>
        <ul class="recovery-codes-page-tabs__list">
            <li class="recovery-codes-page-tabs__list-item" title="@ViewData["Title"]">
                <label class="recovery-codes-page-tabs__list-item-label" for="tab1" role="button">
                    <i class="fas fa-mobile"></i> <span>@ViewData["Title"]</span>
                </label>
            </li>
        </ul>

        <div class="recovery-codes-page-tabs__slider"><div class="indicator"></div></div>
        <div class="recovery-codes-page-tabs__content">
            <div class="alert alert-warning" role="alert">
                <p class="text-center">
                    <strong>Put these codes in a safe place.</strong>
                </p>
                <p>
                    If you lose your device and don't have the recovery codes you will lose access to your account.
                </p>
            </div>
            
            <p class="text-center">
                @for (var row = 0; row < Model.RecoveryCodes.Length; row += 2)
                {
                    <code class="recovery-code">@Model.RecoveryCodes[row]</code><text>&nbsp;</text><code class="recovery-code">@Model.RecoveryCodes[row + 1]</code><br />
                }
            </p>
            
        </div>
    </div>
</div>
