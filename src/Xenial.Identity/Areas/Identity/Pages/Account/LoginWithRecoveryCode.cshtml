@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
    Layout = "/Views/Shared/_LayoutWithoutSide.cshtml";
}

<div class="login-with-2fa-recovery-page">
    <div class="login-with-2fa-recovery-page-tabs">
        <input type="radio" id="tab1" name="tab-control" checked>
        <ul class="login-with-2fa-recovery-page-tabs__list">
            <li class="login-with-2fa-recovery-page-tabs__list-item" title="Features">
                <label class="login-with-2fa-recovery-page-tabs__list-item-label" for="tab1" role="button">
                    <i class="fas fa-key"></i> <span>@ViewData["Title"]</span>
                </label>
            </li>
        </ul>

        <div class="login-with-2fa-recovery-page-tabs__slider"><div class="indicator"></div></div>
        <div class="login-with-2fa-recovery-page-tabs__content">
            <form class="xenial-form" method="post">
                <p>
                    You have requested to log in with a recovery code. This login will not be remembered until you provide
                    an authenticator app code at log in or disable 2FA and log in again.
                </p>
                <div asp-validation-summary="All" class="text-danger"></div>
                <ul class="xenial-form__list">
                    <li class="xenial-form__list-item">
                        <label asp-for="Input.RecoveryCode"></label>
                        <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                    </li>
                    <li class="xenial-form__list-item">
                        <button type="submit" class="xenial-form__list-item-submit">Log in</button>
                    </li>
                </ul>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
